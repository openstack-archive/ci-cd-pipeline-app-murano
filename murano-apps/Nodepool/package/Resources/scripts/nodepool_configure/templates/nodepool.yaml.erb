script-dir: /etc/project-config/nodepool/scripts
elements-dir: /etc/project-config/nodepool/elements
images-dir: /opt/nodepool_dib


cron:
  check: '*/15 * * * *'
  cleanup: '*/1 * * * *'
  image-update: '14 14 * * *'

zmq-publishers:
  - tcp://<%= @jenkins_host %>:8888 # Jenkins host

gearman-servers: # Zuul host
  - host: <%= @zuul_host %>
    port: 4730

diskimages:
  - name: ubuntu-trusty
    elements:
      - ubuntu
      - vm
      - growroot
      - infra-package-needs
      - jenkins-slave
    release: trusty
    env-vars:
      TMPDIR: /opt/dib_tmp
      DIB_IMAGE_CACHE: /opt/dib_cache
      DIB_APT_LOCAL_CACHE: '0'
      DIB_DISABLE_APT_CLEANUP: '1'
      NODEPOOL_SSH_KEY: <%= @nodepool_ssh_pubkey %>

labels:
  - name: ubuntu-trusty
    image: ubuntu-trusty
    min-ready: 2
    providers:
      - name: openstack-provider

providers:
  - name: openstack-provider
    region-name: 'RegionOne'
    username: <%= @os_username %>
    password: <%= @os_password %>
    auth-url: <%= @os_auth_url %>
    project-name: <%= @os_tenant_name %>
    image-type: qcow2
    max-servers: 20
    use-neutron: true
    networks:
      - net-id: <%= @net_id %>
    images:
      - name: ubuntu-trusty
        diskimage: ubuntu-trusty
        min-ram: 2048
        private-key: /home/nodepool/.ssh/id_rsa
        setup: prepare_node.sh
        username: jenkins

targets:
  - name: jenkins
    hostname: '{label.name}-{provider.name}-{node_id}'
    subnode-hostname: '{label.name}-{provider.name}-{node_id}-{subnode_id}'
